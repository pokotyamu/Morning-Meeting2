<header>
  <div class="container">
    <div class="row align-items-center m-0">
      <h1>Morning Meeting</h1>
      <a href="https://feedforce.qiita.com/" target="_blank" class="btn btn-outline-light">
        <i class="fas fa-file-alt mr-1"></i>
        過去の記事
      </a>
    </div>
  </div>
</header>

<main>
  <div class="container mt-3">

    <%= form_with url: slides_team_path(@target.team), method: :patch, local: true, class: 'row' do |f| %>
      <div class="col-12 mb-4">
        <h2>
          <%= @target.team.name %>
          <%= @target.start_on.strftime("%Y/%m") %>
        </h2>
      </div>
      <div class="col-12 col-md-4">
        <div class="form-group">
          <%= f.label :売上目標 %>
          <%= f.text_field :value, name: "target[value]", value: @target.value, autofocus: true, class: "form-control" %>
        </div>
        <% @performances.each do |performance| %>
        <div class="form-group mt-4">
          <label><%= performance.formatted_week %></label>
          <%= f.text_field :value, name: "performance[#{performance.id}][value]", value: performance.value, class: "form-control" %>
        </div>
        <% end %>
      </div>
      <div class="col-12 col-md-8">
        <ul class="nav nav-pills" id="pills-tab" role="tablist">
          <% @performances.each_with_index do |performance, i| %>
            <li class="nav-item">
              <a
                class="nav-link <% if i == 0 %>active<% end %>"
                id="pills-<%= i %>-tab"
                data-toggle="pill"
                href="#pills-<%= i %>"
                role="tab"
                aria-controls="pills-<%= i %>"
                aria-selected="<% if i == 0 %>true<% else %>false<% end %>"
              >
                <%= performance.formatted_week %>
              </a>
            </li>
          <% end %>
        </ul>
        <div class="tab-content" id="pills-tabContent">
          <% @performances.each_with_index do |performance, i| %>
            <div
              class="tab-pane fade<% if i == 0 %> show active<% end %>"
              id="pills-<%= i %>"
              role="tabpanel"
              aria-labelledby="pills-home-tab"
            >
            <%= f.text_area :value, name: "performance[#{performance.id}][content]", value: performance.content, class: "form-control", placeholder: "マークダウンで記入してください" %>
            </div>
          <% end %>
        </div>
      </div>
  </div>
</main>

<footer class="py-3 fixed-bottom">
  <div class="container text-right">
      <%= f.submit "変更を保存する", class: "btn btn-lg btn-primary" %>
      <% end %>
  </div>
</footer>
