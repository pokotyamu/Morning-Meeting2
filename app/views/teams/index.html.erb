<header>
  <h1>Morning Meeting</h1>
  <a href="https://feedforce.qiita.com/" target="_blank" class="btn btn-outline-light">
    <i class="fas fa-file-alt mr-1"></i>
    過去の記事
  </a>
</header>

<h1>チーム一覧</h1>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>">
    <div class="container">
      <%= value %>
    </div>
  </div>
<% end %>

<table>
  <tr>
    <th>順番</th>
    <th>チーム名</th>
  </tr>
  <% @enabled_teams.each do |team| %>
    <tr>
      <td><%= team.order %></td>
      <td><%= team.name %></td>
    </tr>
  <% end %>
  <tr>
    <td></td>
    <td><%= link_to '全体共有', new_announcement_path %></td>
  </tr>
</table>

<hr>

<h2>表示されないチーム</h2>
<table>
  <tr>
    <th>チーム名</th>
  </tr>
  <% @disabled_teams.each do |team| %>
    <tr>
      <td><%= team.name %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'チーム追加', new_team_path  %>
