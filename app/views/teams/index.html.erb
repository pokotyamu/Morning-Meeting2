<header>
  <div class="container">
    <div class="row align-items-center m-0">
      <h1>Morning Meeting</h1>
      <a href="https://feedforce.qiita.com/" target="_blank" class="btn btn-outline-light">
        <i class="fas fa-file-alt mr-1"></i>
        過去の記事
      </a>
    </div>
  </div>
</header>

<main>
  <div class="container mt-3">
    <div class="row">
      <div class="col-6">
        <h2>チーム一覧</h2>
        <% flash.each do |key, value| %>
          <div class="alert alert-<%= key %>">
            <div class="container">
              <%= value %>
            </div>
          </div>
        <% end %>
        <section class="teamlist">
          <% @enabled_teams.each do |team| %>
            <div class="teamlist-item">
              <h3 class="mb-0"><%= link_to team.name, slides_edit_team_path(team) =%></h3>
              <small>最終編集: 2019/02/10 19:33</small>
              <%= link_to edit_team_path(team), class: 'text-dark' do %>
                <i class="fas fa-cog ml-2"></i>
              <% end %>
            </div>
          <% end %>
          <div class="teamlist-item">
            <h3 class="mb-0"><%= link_to '全体共有', new_announcement_path %></h3>
            <small>最終編集: 2019/02/10 19:33</small>
            <i class="fas fa-cog ml-2"></i>
          </div>
        </section>

        <div class="text-right mt-3">
        <%= link_to new_team_path, class: 'btn btn-outline-primary' do %>
          <i class="fas fa-plus mr-1"></i>チーム作成
        <% end %>
        </div>

        <!-- なければ heading ごと非表示に -->
        <h2 class="mt-4">非表示チーム一覧</h2>
        <section class="teamlist">
          <% @disabled_teams.each do |team| %>
            <div class="teamlist-item">
              <h3 class="mb-0"><%= team.name =%></h3>
              <small>最終編集: 2019/02/10 19:33</small>
              <i class="fas fa-cog ml-2"></i>
            </div>
          <% end %>
        </section>
      </div>
      <div class="col-6">
        <h2>朝会プレビュー</h2>
      </div>

    </div>
  </div>
</main>

<footer class="py-3 fixed-bottom">
  <div class="container text-right">
      <a href="#" class="btn btn-lg btn-primary"><i class="fas fa-play mr-2"></i>朝会を開始する</a>
  </div>
</footer>
