<header>
  <div class="container">
    <div class="row align-items-center m-0">
      <h1>Morning Meeting</h1>
      <a href="https://feedforce.qiita.com/" target="_blank" class="btn btn-outline-light">
        <i class="fas fa-file-alt mr-1"></i>
        過去の記事
      </a>
    </div>
  </div>
</header>

<main>
  <h1><%= @team.name %></h1>

  <%= form_with model: @team, local: true do |f| %>
    <div class="form-group">
      <%= f.label :name %><br />
      <%= f.text_field :name, autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :order %><br />
      <%= f.number_field :order %>
    </div>

    <div class="actions">
      <%= f.submit "更新" %>
    </div>

    <div class="actions">
      <%= link_to '削除', team_path(@team), method: :delete, data: { confirm: '本当に削除しますか？' }  %>
    </div>
  <% end %>

</main>

<footer class="py-3 fixed-bottom">
  <div class="container text-right">
      <a href="#" class="btn btn-lg btn-primary"><i class="fas fa-play mr-2"></i>朝会を開始する</a>
  </div>
</footer>
